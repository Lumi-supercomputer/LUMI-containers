Bootstrap: oras
from: ghcr.io/lumi-supercomputer/vgl:1.0

%post
    cp /usr/bin/true /usr/sbin/groupadd
    cp /usr/bin/true /usr/sbin/useradd
    zypper -n install paraview
%runscript
    export VGL_DISPLAY=$(getEglCard)
    if [[ ! -e $VGL_DISPLAY ]]; then
        eglDebugInfo
        exit 1
    else
        vglrun paraview
    fi
